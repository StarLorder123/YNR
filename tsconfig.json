    "compilerOptions": {
        "target": "es2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./out",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}